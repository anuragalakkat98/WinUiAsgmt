<?xml version="1.0" encoding="utf-8"?>
<Window x:ConnectionId='1'
    x:Class="DotNetWinUiApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:DotNetWinUiApp.Model"
    mc:Ignorable="d"
    Title="Trip Conflict List">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ComboBox x:ConnectionId='2' x:Name="ControlDropdown" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Width="150" PlaceholderText="Control" FontWeight="Bold">
            <ComboBoxItem Content="Option 1"/>
            <ComboBoxItem Content="Option 2"/>
            <ComboBoxItem Content="Option 3"/>
        </ComboBox>
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Margin="10">
            <StackPanel>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="LightGray" BorderThickness="0,0,1,1">
                        <Button x:ConnectionId='27' Background="Transparent" HorizontalAlignment="Stretch" BorderBrush="White" Tag="ServiceId"                              >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Service ID" Margin="1,0,0,0" FontWeight="Bold"/>
                                <Viewbox Height="16" Width="16" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Sort" Margin="5,0,0,0"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                        <Button x:ConnectionId='26' Background="Transparent" HorizontalAlignment="Stretch" BorderBrush="White" Tag="TripId"                              >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Trip ID" Margin="1,0,0,0" FontWeight="Bold"/>
                                <Viewbox Height="16" Width="16" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Sort" Margin="5,0,0,0"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                        <Button x:ConnectionId='25' Background="Transparent" HorizontalAlignment="Stretch" BorderBrush="White" Tag="Direction"                              >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Direction" Margin="1,0,0,0" FontWeight="Bold"/>
                                <Viewbox Height="16" Width="16" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Sort" Margin="5,0,0,0"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border Grid.Column="3" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                        <Button x:ConnectionId='24' Background="Transparent" HorizontalAlignment="Stretch" BorderBrush="White" Tag="StartTime"                              >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Start Time" Margin="1,0,0,0" FontWeight="Bold"/>
                                <Viewbox Height="16" Width="16" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Sort" Margin="5,0,0,0"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border Grid.Column="4" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                        <Button x:ConnectionId='23' Background="Transparent" HorizontalAlignment="Stretch" BorderBrush="White" Tag="TrainType"                              >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Train Type" Margin="1,0,0,0" FontWeight="Bold"/>
                                <Viewbox Height="16" Width="16" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Sort" Margin="5,0,0,0"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border Grid.Column="5" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                        <Button x:ConnectionId='22' Background="Transparent" HorizontalAlignment="Stretch" BorderBrush="White" Tag="Length"                              >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Length" Margin="1,0,0,0" FontWeight="Bold"/>
                                <Viewbox Height="16" Width="16" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Sort" Margin="5,0,0,0"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border Grid.Column="6" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                        <Button x:ConnectionId='21' Background="Transparent" HorizontalAlignment="Stretch" BorderBrush="White" Tag="PostFix"                              >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="PostFix" Margin="1,0,0,0" FontWeight="Bold"/>
                                <Viewbox Height="16" Width="16" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Sort" Margin="5,0,0,0"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border Grid.Column="7" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                        <Button x:ConnectionId='20' Background="Transparent" HorizontalAlignment="Stretch" BorderBrush="White" Tag="StartLocation"                              >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Start Location" Margin="1,0,0,0" FontWeight="Bold"/>
                                <Viewbox Height="16" Width="16" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Sort" Margin="5,0,0,0"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border Grid.Column="8" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                        <Button x:ConnectionId='19' Background="Transparent" HorizontalAlignment="Stretch" BorderBrush="White" Tag="EndLocation"                              >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="End Location" Margin="1,0,0,0" FontWeight="Bold"/>
                                <Viewbox Height="16" Width="16" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Sort" Margin="5,0,0,0"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border Grid.Column="9" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                        <Button x:ConnectionId='18' Background="Transparent" HorizontalAlignment="Stretch" BorderBrush="White" Tag="Conflicts"                              >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="# Conflicts" Margin="1,0,0,0" FontWeight="Bold"/>
                                <Viewbox Height="16" Width="16" Margin="5,0,0,0">
                                    <SymbolIcon Symbol="Sort" Margin="5,0,0,0"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                    <ItemsControl x:ConnectionId='4' x:Name="TripsListView"                                       >
                        <ItemsControl.ItemTemplate>
                            <DataTemplate                        >
                                <Grid x:ConnectionId='6' HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border BorderBrush="LightGray" BorderThickness="0,0,1,1">
                                        <TextBlock x:ConnectionId='16'                           HorizontalAlignment="Center" VerticalAlignment="Center"                                      >
                                        <ToolTipService.ToolTip>
                                            <ToolTip x:ConnectionId='17'                                  />
                                        </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                                        <TextBlock x:ConnectionId='15'                        HorizontalAlignment="Center" VerticalAlignment="Center"                                      />
                                    </Border>
                                    <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                                        <TextBlock x:ConnectionId='14'                           HorizontalAlignment="Center" VerticalAlignment="Center"                                      />
                                    </Border>
                                    <Border Grid.Column="3" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                                        <TextBlock x:ConnectionId='13'                           HorizontalAlignment="Center" VerticalAlignment="Center"                                      />
                                    </Border>
                                    <Border Grid.Column="4" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                                        <TextBlock x:ConnectionId='12'                           HorizontalAlignment="Center" VerticalAlignment="Center"                                      />
                                    </Border>
                                    <Border Grid.Column="5" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                                        <TextBlock x:ConnectionId='11'                        HorizontalAlignment="Center" VerticalAlignment="Center"                                      />
                                    </Border>
                                    <Border Grid.Column="6" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                                        <TextBlock x:ConnectionId='10'                         HorizontalAlignment="Center" VerticalAlignment="Center"                                      />
                                    </Border>
                                    <Border Grid.Column="7" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                                        <TextBlock x:ConnectionId='9'                               HorizontalAlignment="Center" VerticalAlignment="Center"                                      />
                                    </Border>
                                    <Border Grid.Column="8" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                                        <TextBlock x:ConnectionId='8'                             HorizontalAlignment="Center" VerticalAlignment="Center"                                      />
                                    </Border>
                                    <Border Grid.Column="9" BorderBrush="LightGray" BorderThickness="0,0,1,1">
                                        <TextBlock x:ConnectionId='7'                           HorizontalAlignment="Center" VerticalAlignment="Center"                                      />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Margin="10" CornerRadius="5">
            <ListBox x:ConnectionId='3' x:Name="LogPanel" Height="100">
                <ListBoxItem Content="Log message 1"/>
                <ListBoxItem Content="Log message 2"/>
                <ListBoxItem Content="Log message 3"/>
            </ListBox>
        </Border>

        <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1" Margin="10" CornerRadius="5">
            <TextBlock Text="Automatic Conflict Resolution Status Is Enabled" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Margin="10,10,0,10" Foreground="Green"/>
        </Border>
    </Grid>
</Window>

